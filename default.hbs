<html lang="{{@site.locale}}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{meta_title}}</title>

    <link rel="stylesheet" href="{{asset 'built/screen.css'}}" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&family=Lora&display=swap"
      rel="stylesheet"
    />

    {{ghost_head}}
  </head>
  <body class="{{body_class}} fade-in">
    <div class="gh-viewport">
      <header id="gh-head" class="gh-head">
        <div class="gh-head-inner gh-container">
          <div class="gh-head-brand">
            <a class="gh-head-logo" href="{{@site.url}}">
              {{#if @site.logo}}
                <img src="{{@site.logo}}" alt="{{@site.title}}" />
              {{else}}
                {{@site.title}}
              {{/if}}
            </a>
          </div>
          <nav class="gh-head-menu">
            {{navigation}}
          </nav>
          <div class="gh-head-actions">
            {{search}}
            {{#if @site.members_enabled}}
              {{#if @member}}
                <a class="gh-head-link" href="#/portal/account">Account</a>
              {{else}}
                <a class="gh-head-button" href="{{@site.signup_url}}">{{t
                    "Subscribe"
                  }}</a>
              {{/if}}
            {{/if}}
          </div>
        </div>
        <div class="gh-mobile-menu">
        </div>
        <div class="gh-overlay"></div>
      </header>

      <main class="gh-main gh-container">
        {{{body}}}
      </main>

      <footer class="gh-foot gh-container">
        <div class="gh-foot-inner">
          <div class="gh-foot-menu">
            {{navigation type="secondary"}}
          </div>
          <div class="gh-foot-meta">
            Published with
            <a href="https://ghost.org" target="_blank" rel="noopener">Ghost</a>
          </div>
        </div>
      </footer>
    </div>

    {{ghost_foot}}

    <script src="{{asset 'built/screen.js'}}" defer></script>
  </body>
</html>